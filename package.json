{
  "name": "tracker",
  "version": "1.0.0",
  "description": "Fullstack application for package tracking",
  "private": true,
  "scripts": {
    "dev": "concurrently -n \"BACKEND,FRONTEND\" -c \"magenta,cyan\" \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "dev:frontend": "pnpm --filter tracker-frontend dev",
    "dev:backend": "pnpm --filter tracker-backend dev",
    "build": "pnpm --filter tracker-backend build && pnpm --filter tracker-frontend build",
    "build:frontend": "pnpm --filter tracker-frontend build",
    "build:backend": "pnpm --filter tracker-backend build",
    "start": "pnpm --filter tracker-backend start",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "fast-jwt": ">=5.0.6"
    }
  }
}

