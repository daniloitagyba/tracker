# Database
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://user:password@host:5432/tracker?schema=public"

# Google OAuth
# IMPORTANTE: Você precisa configurar as URIs autorizadas no Google Cloud Console:
# - Authorized JavaScript origins: https://seu-frontend.onrender.com
# - Authorized redirect URIs: https://seu-backend.onrender.com/auth/google/callback
GOOGLE_CLIENT_ID="seu_google_client_id"
GOOGLE_CLIENT_SECRET="seu_google_client_secret"

# JWT (o Render pode gerar automaticamente)
JWT_SECRET="gerar_automaticamente_no_render"
JWT_REFRESH_SECRET="gerar_automaticamente_no_render"

# RapidAPI
RAPIDAPI_KEY="sua_chave_rapidapi"

# App URLs (serão configuradas automaticamente pelo Render)
PORT=10000
FRONTEND_URL="https://seu-frontend.onrender.com"
BACKEND_URL="https://seu-backend.onrender.com"
